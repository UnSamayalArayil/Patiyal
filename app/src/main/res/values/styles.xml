<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
    </style>

    <style name="textStyle" parent="android:TextAppearance">
        <item name="fontPath">Gotham-Book.otf</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textStyleHeader" parent="android:TextAppearance">
        <item name="fontPath">Gotham-Book.otf</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyleLarge" parent="android:TextAppearance">
        <item name="fontPath">Gotham-Book.otf</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

</resources>
